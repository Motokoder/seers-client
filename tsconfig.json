{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/seers.ts",
    "outDir": "./dist/",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "lib": ["ESNext"]
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
